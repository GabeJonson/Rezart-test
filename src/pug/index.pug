      small.text-center Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed et quam est. Mauris faucibus tellus ac auctor posuere. 
      
      .filter
        ul#tabs.grid_12.text-container.text-center.nav-tabs
          each item, index in filter
            if index == 0
              li.active
                a(href=`#${item}`, data-toggle='tab')= item
            else
              li
                a(href=`#${item}`, data-toggle='tab')= item
              
        .tab-content.grid_12.filter-items-container
          each item, index in filter
            if index == 0
              div(id= item).tab-pane.active
                .tab-pane-container
                  -for(var i = 1; i <= 6; i++)
                    a.relative(href=`${imgPath}filter_${i}.jpg`, data-fancybox="images")
                      +img(`filter_${i}.jpg`)(class='responsive-image')
            else 
              div(id= item).tab-pane
                .tab-pane-container
                  -for(var i = 1; i <= 6; i++)
                    a.relative(href=`${imgPath}filter_${i}.jpg`, data-fancybox="images")
